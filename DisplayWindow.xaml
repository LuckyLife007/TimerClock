<Window x:Class="TimerClockApp.DisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DisplayWindow"
        Icon="/Resources/app_icon.ico"
        Height="450"
        Width="800"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="LightGray"
        Loaded="Window_Loaded">
        <Grid Background="LightGray"
              IsHitTestVisible="True">
                <!-- Draggable Icon (Top Left) -->
                <Button x:Name="DragHandle"
                        Content="⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮ Display Window ⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮⋮"
                        Style="{StaticResource SettingsIconButtonStyle}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Cursor="SizeAll"
                        PreviewMouseLeftButtonDown="DragHandle_PreviewMouseLeftButtonDown"
                        Width="696"
                        Height="35"/>

                <!-- Window Controls (Top Right) -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Height="35"
                            Width="99">
                        <!-- Minimize -->
                        <Button Content="─"
                                Style="{StaticResource SettingsIconButtonStyle}"
                                Click="MinimizeButton_Click"
                                Margin="2"/>

                        <!-- Maximize/Restore -->
                        <Button x:Name="MaximizeButton"
                                Content="⧉"
                                Style="{StaticResource SettingsIconButtonStyle}"
                                Click="MaximizeButton_Click"
                                Margin="2"/>

                        <!-- Close -->
                        <Button Content="✕"
                                Style="{StaticResource SettingsIconButtonStyle}"
                                Click="CloseButton_Click"
                                Margin="2"/>
                </StackPanel>

                <!-- Viewbox for scaling the content -->
                <Viewbox Stretch="Uniform"
                         Margin="0,33,0,0">
                        <Grid>
                                <TextBlock x:Name="TimeDisplay"
                                           Foreground="Black"
                                           FontFamily="Consolas"
                                           FontWeight="Bold"
                                           Text="{Binding TimeDisplay}"/>
                                <Border x:Name="WarningTimeIndicator"
                                        Background="Orange"
                                        Opacity="0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"/>
                                <Border x:Name="NegativeTimeIndicator"
                                        Background="Red"
                                        Opacity="0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"/>
                        </Grid>
                </Viewbox>
        </Grid>
</Window>