<Window x:Class="TimerClockApp.DisplayWindow"
        x:ClassModifier="public"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DisplayWindow"
        Icon="/Resources/app_icon.ico"
        Height="450"
        Width="800"
        MinHeight="150"
        MinWidth="200"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="LightGray"
        Loaded="Window_Loaded">
        <Grid Background="LightGray"
              IsHitTestVisible="True">
                <!-- Draggable Icon (Top Left) -->
                <Button x:Name="DragHandle"
                        Content="â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹® Display Window â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®â‹®"
                        Style="{StaticResource SettingsIconButtonStyle}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Cursor="SizeAll"
                        PreviewMouseLeftButtonDown="DragHandle_PreviewMouseLeftButtonDown"
                        PreviewMouseDoubleClick="DragHandle_PreviewMouseDoubleClick"
                        Width="696"
                        Height="35"/>
                <!-- Window Controls (Top Right) -->
                <Border BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="4"
                        Margin="4,4,4,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Height="35"
                                    Width="150">
                                <!-- Shrink Button -->
                                <Button x:Name="ShrinkButton"
                                        Content="âŠŸ"
                                        Style="{StaticResource SettingsIconButtonStyle}"
                                        Click="ShrinkButton_Click"
                                        ToolTip="Shrink to minimum size"
                                        Margin="2"/>

                                <!-- Restore Button -->
                                <Button x:Name="RestoreButton"
                                        Content="ðŸ——"
                                        Style="{StaticResource SettingsIconButtonStyle}"
                                        Click="RestoreButton_Click"
                                        ToolTip="Restore to normal size"
                                        Margin="2"/>

                                <!-- Maximize Button -->
                                <Button x:Name="MaximizeButton"
                                        Content="â›¶"
                                        Style="{StaticResource SettingsIconButtonStyle}"
                                        Click="MaximizeButton_Click"
                                        ToolTip="Maximize (Full Screen)"
                                        Margin="2"/>

                                <!-- Minimize Button -->
                                <Button x:Name="MinimizeButton"
                                        Content="â”€"
                                        Style="{StaticResource SettingsIconButtonStyle}"
                                        Click="MinimizeButton_Click"
                                        ToolTip="Minimize"
                                        Margin="2"/>

                                <!-- Close Button -->
                                <Button x:Name="CloseButton"
                                        Content="âœ•"
                                        Style="{StaticResource SettingsIconButtonStyle}"
                                        Click="CloseButton_Click"
                                        ToolTip="Close"
                                        Margin="2"/>
                        </StackPanel>
                </Border>

                <!-- Viewbox for scaling the content -->
                <Viewbox Stretch="Uniform"
                         Margin="0,33,0,0">
                        <Grid>
                                <TextBlock x:Name="TimeDisplay"
                                           Foreground="Black"
                                           FontFamily="Consolas"
                                           FontWeight="Bold"
                                           Text="{Binding TimeDisplay}"/>
                                <Border x:Name="WarningTimeIndicator"
                                        Background="Orange"
                                        Opacity="0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"/>
                                <Border x:Name="NegativeTimeIndicator"
                                        Background="Red"
                                        Opacity="0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"/>
                        </Grid>
                </Viewbox>
        </Grid>
</Window>